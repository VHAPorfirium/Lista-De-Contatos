<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_adicionar_contato"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Selecionar foto -->
        <ImageView
            android:id="@+id/imgFotoNovoContato"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/foto_do_contato"
            android:src="@drawable/ic_contact_placeholder" />

        <Button
            android:id="@+id/btnAdicionarFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adicionar_foto"
            android:layout_marginTop="8dp" />

        <!-- Nome -->
        <EditText
            android:id="@+id/edtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nome"
            android:layout_marginTop="16dp" />

        <!-- Telefone -->
        <EditText
            android:id="@+id/edtTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/telefone"
            android:layout_marginTop="8dp"
            android:inputType="phone" />

        <!-- E-mail -->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:layout_marginTop="8dp"
            android:inputType="textEmailAddress" />

        <!-- LinkedIn -->
        <EditText
            android:id="@+id/edtLinkedin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/linkedin"
            android:layout_marginTop="8dp"
            android:inputType="textUri" />

        <!-- Endereço -->
        <EditText
            android:id="@+id/edtEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/endereco"
            android:layout_marginTop="8dp" />

        <!-- CheckBox para definir favorito -->
        <CheckBox
            android:id="@+id/chkNovoFavorito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/favorito" />

        <!-- Botão para salvar -->
        <Button
            android:id="@+id/btnSalvarContato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/salvar"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
