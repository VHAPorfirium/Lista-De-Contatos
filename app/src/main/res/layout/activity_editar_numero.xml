<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_editar_contato"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Foto do contato -->
        <ImageView
            android:id="@+id/imgFotoContatoEditar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/foto_do_contato"
            android:src="@drawable/ic_contact_placeholder" />

        <Button
            android:id="@+id/btnEditarFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editar_foto"
            android:layout_marginTop="8dp" />

        <!-- Nome -->
        <EditText
            android:id="@+id/edtNomeEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nome"
            android:layout_marginTop="16dp" />

        <!-- Telefone -->
        <EditText
            android:id="@+id/edtTelefoneEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/telefone"
            android:layout_marginTop="8dp"
            android:inputType="phone" />

        <!-- E-mail -->
        <EditText
            android:id="@+id/edtEmailEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:layout_marginTop="8dp"
            android:inputType="textEmailAddress" />

        <!-- LinkedIn -->
        <EditText
            android:id="@+id/edtLinkedinEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/linkedin"
            android:layout_marginTop="8dp"
            android:inputType="textUri" />

        <!-- Endereço -->
        <EditText
            android:id="@+id/edtEnderecoEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/endereco"
            android:layout_marginTop="8dp" />

        <!-- CheckBox para definir favorito -->
        <CheckBox
            android:id="@+id/chkFavoritoEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/favorito" />

        <!-- Botão para atualizar -->
        <Button
            android:id="@+id/btnAtualizarContato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/atualizar"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
