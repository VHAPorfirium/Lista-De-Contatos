<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_contato_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp"
    android:gravity="center_vertical">

    <!-- Foto do Contato -->
    <ImageView
        android:id="@+id/imgFotoItemContato"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/foto_do_contato"
        android:src="@drawable/ic_contact_placeholder"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop" />

    <!-- Dados do Contato -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNomeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nome_contato_exemplo"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTelefoneItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/telefone_contato_exemplo"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <!-- Ícone de favorito (opcional) -->
    <ImageView
        android:id="@+id/imgFavoritoItem"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_star_filled"
        android:contentDescription="@string/favorito"
        android:visibility="gone"
        android:layout_marginStart="8dp" />
</LinearLayout>
